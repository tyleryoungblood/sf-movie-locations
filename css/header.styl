header
  position absolute
  top 2em
  text-align center
  left 50%
  transform: translateX(-50%)
  z-index 1
  background-color rgba(0,0,0,.3)
  border-radius .2em
  padding 0 2em 2em 2em
  color #ccc

  .search-icon:after
    content ""
    display inline-block
    margin-left .5em
    width 1em
    height 1em
    background-image url(../img/search.svg)
    background-size 1em 1em
